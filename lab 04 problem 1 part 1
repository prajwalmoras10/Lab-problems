# takes a sequence of numbers and returns the maximum and minimum numbers in the sequence
my_list = []

count = int(input("How many numbers you want to add : "))

for i in range(1,count+1):
    my_list.append(int(input("Enter number {} : ".format(i))))

print("Input Numbers : ")
print(my_list)

min = my_list[0]
max = my_list[0]

for num in my_list:
    if num < min:
        min = num
    elif num > max:
        max = num


print("Minimum number : {}, Maximum number : {}".format(min,max))
