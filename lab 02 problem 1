# takes two numbers and performs multiple operations
a = int(input("Enter the first number :"))
b = int(input("Enter the second number :"))

print("The sum of the two numbers is =", (a+b))
print("The difference of two numbers is =", (a-b))
print("The product of two numbers is =", (a*b))
print("The average of the two numbers is =", (a+b)/2)
print("The absolute distance between two numbers is =", abs(a-b))
print("The largest of the two numbers is =", max(a, b))
print("The smallest of the two numbers is =", min(a, b))
